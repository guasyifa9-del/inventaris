# Database Configuration
DB_HOST=localhost
DB_NAME=inventaris_kantor
DB_USER=root
DB_PASS=

# Application Settings
APP_URL=http://localhost/inventaris
APP_ENV=production
APP_DEBUG=false

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@kantor.com
SMTP_FROM_NAME=Sistem Inventaris Kantor

# Security Keys
JWT_SECRET=change-this-to-random-string-for-jwt-security
QR_SECRET=change-this-to-random-string-for-qr-signature

# Redis Cache Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# API Configuration
API_RATE_LIMIT=100

# Session Configuration
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Pagination
ITEMS_PER_PAGE=20

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# QR Code Settings
QR_SIZE=300
QR_MARGIN=10

# Logging
LOG_LEVEL=info
LOG_PATH=logs/

# Maintenance Mode
MAINTENANCE_MODE=false
