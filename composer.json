{
    "name": "inventaris/kantor",
    "description": "Sistem Inventaris Barang Kantor - Enhanced Version",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Development Team",
            "email": "dev@kantor.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpmailer/phpmailer": "^6.8",
        "endroid/qr-code": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "lib/"
        },
        "files": [
            "lib/functions.php",
            "lib/auth.php"
        ]
    },
    "scripts": {
        "test": "phpunit tests",
        "cache:clear": "php scripts/cache_clear.php",
        "cache:warm": "php scripts/cache_warm.php",
        "qr:generate": "php scripts/generate_qr.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
